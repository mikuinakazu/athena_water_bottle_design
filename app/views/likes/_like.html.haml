- if user_signed_in?
  - if design.like_user(current_user.id)
    = button_to design_like_path(like, design_id: design.id), method: :delete, id: 'like-button', remote: true do
      = image_tag('like_black.png')
      .span
      = design.likes_count
      .span
  - else
    = button_to design_likes_path(design), id: 'like-button', remote: true do
      = image_tag('like_white.png')
      .span
      = design.likes_count
      .span
- else
  = image_tag('like_white.png')
  .span
  = design.likes_count
  .span



